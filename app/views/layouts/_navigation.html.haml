%nav.level
    %div.container
        %div.navbar-brand
            %a.navbar-item
                = image_tag "ruby.png"
            %div.navbar-burger.burger
                %span
                %span   
                %span
            %div#topNav.navbar-menu
                %div.navbar-start
                    = link_to 'Home',  root_path, class: 'navbar-item'
                    = link_to 'Gallery', about_path, class: 'navbar-item'
                    = link_to 'About', about_path, class: 'navbar-item'
                    = link_to 'Pages', about_path, class: 'navbar-item'
                %div.navbar-end.level-right
                    %div.navbar-item
                        - if logged_in?
                            %div.field.is-grouped
                                %p.control
                                    = link_to user_path(current_user), :class => 'button is-middle' do
                                        %span.icon
                                            %i.fa.fa-user.alt
                                        %span Account
                                %p.control
                                    = link_to logout_path, method: :delete, :class => 'button is-middle is-info is-outlined' do
                                        %span.icon
                                            %i.fa.fa-sign-out
                                        %span Logout
                        - else
                            %div.field.is-grouped
                                %p.control
                                    = link_to signup_path, :class => 'button is-middle' do                                 
                                        %span.icon
                                            %i.fa.fa-user-plus
                                        %span Sign Up
                                %p.control
                                    = link_to login_path, :class => 'button is-middle is-info is-outlined' do
                                        %span.icon
                                            %i.fa.fa-user
                                        %span Login
